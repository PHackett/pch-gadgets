<?xml version="1.0" encoding="UTF-8" ?>
<Module>

	<ModulePrefs
		title="Player Statistics"
		author="Paul Hackett"
		author_email="TRCCGadgets@paulhackett.com"
		description="For the rendering of the statistics for an individual player."
		thumbnail="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/images/TRCC-Shield.png"
		width="700"
		height="500"
		scrolling="true">
	</ModulePrefs>

	<UserPref name="linkTarget" display_name="Link URL target" datatype="string" default_value="_parent"/>
	<UserPref name="surname" display_name="Player surname" datatype="string" default_value="Downes"/>
	<UserPref name="firstname" display_name="Player first name" datatype="string" default_value="David"/>

	<Content type="html">

		<![CDATA[
			<!--
			Global CSS 
			-->
			<link href="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/css/trcc.css" rel="stylesheet" type="text/css">

			<!--
			Placeholder where the generated content will be placed 
			-->
			<div id="content_div"></div>

			<!--
			Include my utilities libraries
			-->
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/utils/GGUtils.js" type="text/javascript"></script>
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/utils/GGGadget.js" type="text/javascript"></script>
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/utils/TRCCUtils.js" type="text/javascript"></script>
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/objects/PlayerLifetime.js" type="text/javascript"></script>
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/objects/PlayerLifetimeRender.js" type="text/javascript"></script>
			<script src="http://pch-gadgets.googlecode.com/svn/trunk/pch-gadgets/TRCC/objects/PlayerLifetimeAccumulate.js" type="text/javascript"></script>

			<script type="text/javascript">

				var gXMLSrc="";
				var gFirstName="";
				var gSurname="";


				//-------------------------------------------------------[renderData]-
				// Render the XML
				//
				// @param response IN The XML whose data we are to render as HTML
				//--------------------------------------------------------------------
				function renderData (response)
				{
					if (response == null || typeof(response) != "object" || response.firstChild == null)
					{
						_gel("content_div").innerHTML = "<i>Invalid data from " + gXMLSrc + "</i>";
						
						return;
					}
				
					//
					// Parse the data
					//
					var lPLS = new GGTRCC_PlayerLifetimeO (response);
					
					//
					// Make the HTML
					//
					lHTML += GGTRCC_RenderBattingTotals (lPLS.mLifetimeBattingTotals);
					lHTML += GGTRCC_RenderBattingByYear (lPLS);
					lHTML += GGTRCC_RenderBattingHighlightsByYear(lPLS);
					lHTML += GGTRCC_RenderBattingBestByYear(lPLS);
					lHTML += GGTRCC_RenderBowlingByYear(lPLS);
					lHTML += GGTRCC_RenderBowlingBestByYear(lPLS);
					lHTML += GGTRCC_RenderBowlingHighlightsByYear(lPLS);
					lHTML += lPLS.playerHTML();
			
					//
					// Display HTML string in <div>
					//
					_gel('content_div').innerHTML = lHTML;
				}


				//-------------------------------------------------[processSettings]-
				// Determine what year & team
				//--------------------------------------------------------------------
				function processSettings ()
				{
					var lPrefs=new _IG_Prefs();
					
					//
					// First the first name - Any userPrefs?
					//
					gFirstName = TRCCUtils_ProcessPreferences ("firstname", lPrefs, "David");
					
					//
					// Now the surname ...
					//
					gSurname = TRCCUtils_ProcessPreferences ("surname", lPrefs, "Downes");
					
					//
					// Lastly - Save away the "link target"
					//
					GGUtils_setLinkTarget (lPrefs.getString ("linkTarget"));
				}
				
				
				//----------------------------------------------------------[display]-
				// Load the XML & call the renderer
				//--------------------------------------------------------------------
				function display()
				{
					if (!GGGadget_hostedOnSites())
					{
						//
						// Read the user prefs & hosting URL
						//
						processSettings();
						
						gXMLSrc = GGTRCC_PlayerLifetime_GetXMLURLFromName (gFirstName, gSurname);
					}
					else
					{
						gXMLSrc = GGTRCC_PlayerLifetime_GetXMLURLFromLocation();
					}
					
					_IG_FetchXmlContent(gXMLSrc, renderData);
				}

				_IG_RegisterOnloadHandler(display);

			</script>
		]]>
	</Content>
</Module>
